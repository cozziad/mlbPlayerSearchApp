<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="85dp"
            android:layout_height="82dp" app:srcCompat="@android:drawable/star_big_on"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            tools:text="Babe Ruth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerName" app:layout_constraintStart_toEndOf="@+id/imageView2"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textColor="@android:color/black" android:textSize="18sp" android:textStyle="bold"
            android:fontFamily="serif"/>
    <TextView
            tools:text="New York Yankees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerTeam" app:layout_constraintStart_toEndOf="@+id/playerName"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp" android:fontFamily="serif"/>
    <TextView
            tools:text="Oct 22 1875"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerDOB" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/playerName"
            android:fontFamily="serif" android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textView5" android:layout_marginStart="8dp"/>
    <TextView
            tools:text="CF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerPosition" app:layout_constraintStart_toEndOf="@+id/imageView2"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/playerName" android:textSize="18sp" android:fontFamily="serif"/>
    <TextView
            android:text="DOB:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" app:layout_constraintStart_toEndOf="@+id/playerPosition"
            android:layout_marginStart="8dp"
            android:textSize="18sp" android:textStyle="bold" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/playerName" android:fontFamily="serif"
            android:textColor="@android:color/black"/>
</android.support.constraint.ConstraintLayout>